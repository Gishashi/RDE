{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "src",
    "typeRoots" : ["./node_modules/@types", "./types"],
    "strict": false,
    "target": "es2017",
    "composite": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ]
}
