{
  "eslint.validate": [
    "javascript",
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "configFile": "{{{eslintrcPath}}}"
  },
  "files.exclude": {
    "**/.cache": true,
    "**/.idea": true,
    "**/.vscode": true,
    {{#isApp}}
    "**/runtime": true,
    "**/node_modules": true
    {{/isApp}}
    {{^isApp}}
    "**/node_modules": true
    {{/isApp}}
  }
}
