version: '3'
services:
  rde:
    build:
      context: '../'
      dockerfile: ./.docker/Dockerfile
    volumes:
    - ../app:./app
    - ../template:./template
    - ../rda.config.js:./rda.config.js
    - ../rdc.config.js:./rdc.config.js
    ports:
    {{#ports}}
    - "{{.}}"
    {{/ports}}
    command: rde docker:run {{{cmd}}} {{#watch}}--watch{{/watch}}
