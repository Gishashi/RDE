version: '3'
services:
  {{{tag}}}-service:
    build:
      context: .
      dockerfile: Dockerfile

    ports:
      {{#ports}}
      - "{{.}}"
      {{/ports}}

    volumes:
      {{#exportFiles}}
      - ../{{{.}}}:{{{workDir}}}/{{{.}}}
      {{/exportFiles}}
      - ../rda.config.js:/rde/rda.config.js
      - ../package.json:/rde/rda/package.json
      - ../README.md:/rde/README.md
      - ../.gitignore:/rde/.gitignore
      - ../.git:/rde/.git
      - /Users/wangsong/rede/rde/lib:/usr/local/share/.config/yarn/global/node_modules/rde/lib
      - /Users/wangsong/rede/rde/node_modules:/usr/local/share/.config/yarn/global/node_modules/rde/node_modules
      - ~/.gitconfig:/root/.gitconfig

    command: sleep infinity
